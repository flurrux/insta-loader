{
	"manifest_version": 3,

	"name": "insta-loader",
	"description": "download buttons for instagram media.",
	"version": "1.3.2",

	"icons": { 
		"16": "assets/icons/insta-loader-icon-16.png",
		"48": "assets/icons/insta-loader-icon-48.png",
		"128": "assets/icons/insta-loader-icon-128.png" 
	},

	"background": {
		"service_worker": "app/src/background.ts",
		"type": "module"
	},

	"content_scripts": [
		{
			"run_at": "document_start",
			"matches": ["*://www.instagram.com/*"],
			"js": ["app/src/index.ts"]
		}
	],

	"permissions": [
		"storage",
		"nativeMessaging",
		"tabs",
		"notifications",
		"downloads",
		"webRequest",
		"webNavigation"
	],

	"host_permissions": [
		"*://www.instagram.com/*",
		"*://i.instagram.com/api/v1/media/*"
	],

	"web_accessible_resources": [{
		"resources": [
			"assets/icons/*.png"
		],
		"matches": [
			"*://www.instagram.com/*"
		]
	}]
}